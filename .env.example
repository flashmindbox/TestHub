# Copy this to config/environments/local.env and fill in values

# Environment name
ENV=local

# Project URLs (StudyTab example)
BASE_URL=http://localhost:3002
API_URL=http://localhost:3001

# Test User Credentials
# Create these users in your local app before running tests
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=your_password_here
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=your_password_here

# Timeouts (ms)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000

# Feature Flags
ENABLE_VISUAL_TESTS=true
ENABLE_PERF_TESTS=true
ENABLE_A11Y_TESTS=true
